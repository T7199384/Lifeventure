<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="100dp"
        android:gravity="center">

        <TextView
            android:id="@+id/monsterTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_box"
            android:text="TextView"
            android:textAlignment="center" />
    </TableRow>

    <ProgressBar
        android:id="@+id/enemyHp"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/border_box" />

    <ImageView
        android:id="@+id/monsterImage"
        android:layout_width="177dp"
        android:layout_height="154dp"
        android:layout_below="@+id/enemyHp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="116dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="117dp"
        app:srcCompat="@android:drawable/btn_star_big_off" />

    <Button
        android:id="@+id/attack"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/monsterImage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="88dp"
        android:text="Attack" />

    <Button
        android:id="@+id/defend"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/monsterImage"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="60dp"
        android:text="Defend" />

    <Button
        android:id="@+id/spells"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/attack"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="81dp"
        android:text="Spells" />

    <Button
        android:id="@+id/escape"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/defend"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="60dp"
        android:text="Escape" />

    <TextView
        android:id="@+id/messageBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spells"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/border_box"
        android:text="TextView"
        android:textAlignment="center" />

</RelativeLayout>